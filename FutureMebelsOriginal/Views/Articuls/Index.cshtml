@model IEnumerable<FutureMebelsOriginal.Data.Articul>

@{
    ViewData["Title"] = "Index";
}

<h1> Артикули</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
        <div class="container">
            <div class="row justify-content-md-around">

                @foreach (var item in Model)
                {
                    <div class="card" style="width:30%; height:25%; border-radius:20px; opacity:0.9; ">

                        <div class="card-body">
                            <h5 class="card-title">
                                @Html.DisplayFor(modelItem => item.Types.Name)
                            </h5>
                            <p class="card-text">
                                @Html.DisplayFor(modelItem => item.Categories.Name)
                            </p>
                            <p class="card-text">
                                @Html.DisplayFor(modelItem => item.NameModel)
                            </p>
                            <p class="card-text">
                                @Html.DisplayFor(modelItem => item.Size)
                            </p>
                            <p class="card-subtitle">
                                @Html.DisplayFor(modelItem => item.Price)
                            </p>
                            <p class="card-text">
                                    @Html.DisplayFor(modelItem => item.RegisterOn)
                            </p>
                            <div class="card-imag">
                                <img src="@Html.DisplayFor(modelItem => item.ImgUrl)" width="100" />
                            </div>

                            <a asp-controller="Articuls" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                            <a asp-controller="Articuls" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                            <a asp-controller="Articuls" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a> |
                            <a asp-controller="Orders" asp-action="Create" asp-route-medicineId="@item.Id" class="btn btn-primary">Cart</a>

                        </div>

                    </div>
                }
            </div>
        </div>
   
